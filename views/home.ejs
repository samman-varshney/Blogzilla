  <style>
    :root {
      --primary: #7c3aed;
      --primary-light: #8b5cf6;
      --primary-dark: #6d28d9;
      --slate-800: #1e293b;
      --slate-700: #334155;
      --slate-600: #475569;
      --slate-300: #cbd5e1;
      --slate-100: #f1f5f9;
    }
    
    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
      background-color: #f8fafc;
      color: var(--slate-800);
      overflow-x: hidden;
    }
    
    /* Space for header */
    .header-space {
      height: 80px;
    }
    
    /* Space for footer */
    .footer-space {
      height: 120px;
    }
    
    .hero-gradient {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    }
    
    .feature-card {
      border-radius: 16px;
      transition: all 0.3s ease;
      border: none;
      overflow: hidden;
    }
    
    .feature-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 25px rgba(124, 58, 237, 0.2);
    }
    
    .btn-primary {
      background-color: var(--primary);
      border-color: var(--primary);
    }
    
    .btn-primary:hover {
      background-color: var(--primary-dark);
      border-color: var(--primary-dark);
    }
    
    .btn-outline-primary {
      color: var(--primary);
      border-color: var(--primary);
    }
    
    .btn-outline-primary:hover {
      background-color: var(--primary);
      border-color: var(--primary);
    }
    
    .text-primary {
      color: var(--primary) !important;
    }
    
    .bg-slate {
      background-color: var(--slate-100);
    }
    
    .highlight-badge {
      background-color: rgba(124, 58, 237, 0.1);
      color: var(--primary);
    }
    /* Add this to your style section */
html, body {
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
}

.container, .container-fluid {
  padding-left: 15px;
  padding-right: 15px;
}

.row {
  margin-left: 0;
  margin-right: 0;
}

/* Ensure all images are constrained to their container */
img {
  max-width: 100%;
  height: auto;
}

/* Add this media query for mobile-specific fixes */
@media (max-width: 767px) {
  body {
    padding-left: 0;
    padding-right: 0;
  }
  
  /* If you have any elements with negative margins, reset them */
  .row {
    margin-left: -15px;
    margin-right: -15px;
  }
}
/* Temporary debug helper - will highlight overflowing elements in red */
/* * {
  outline: 1px solid red;
} */
  </style>
</head>
<body>
  <!-- Space for header -->
  <%- include('./partials/header.ejs') %>

  <!-- Hero Section -->
